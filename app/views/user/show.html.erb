<div class="card mx-auto" style="width: 18rem;">

  <div class="Card image cap">

              <%if current_user.avatar.attached?%>
                <%= link_to image_tag(current_user.avatar.variant(resize: 250)),user_show_path,class:"nav-link"%>
                <%else%>
                          <%= image_tag gravatar_image_url(current_user.email,size:100),height:40, width:40,class: "rounded-circle"%>

            <%end%>
   </div>
  <div class="card-body">
    <h2 class="card-title"><%=current_user.name%></h2>
    <p class="card-text">You are a member of Shoppy!</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%=current_user.email%></li>
    <li class="list-group-item">
          <%= link_to "Log Out", destroy_user_session_path,class: "nav-link" , method: :delete %></li>
    <li class="list-group-item">
    <%= link_to "Edit Profile", edit_user_registration_path, class: "nav-link"%></li>
  </ul>
  <div class="card-body">
    <%= link_to "Link", "" , class: 'card-link'%>
    <a href="#" class="card-link"> link</a>
  </div>
</div>
