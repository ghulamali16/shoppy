
<%= simple_form_for @product, html: { multipart: true }  do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, placeholder: "Some title Here" %>
    <%= f.input :description, placeholder: "Some Description Here" %>
    <%= f.input :price, maxlength: 7 %>
    <%= f.input :make, placeholder: "Apple Maybe" %>
    <%= f.input :image, as: :file, multiple: true %>

  </div>

    <br>
  <div class="form-actions">
    <%= f.button :submit , class:"btn btn-success btn-sm"%>
  </div>
<% end %>
